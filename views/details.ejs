<html lang="en">
<%- include("./partials/head.ejs") %>

<body>
  <%- include("./partials/nav.ejs") %>
    
   <a href="/">Back</a>
  <div class="details content">
    <h2><%= art.title %></h2>
    <div class="content">
      <p><%= art.text %></p>
    </div>
  </div>
    <a class="delete" data-doc="<%= art._id %>">delete article</a>
 
     <a class="delete" href="/edit/article/<%= art._id %>">Edit article</a>
  
  <script>
    const trashcan = document.querySelector('a.delete');

    trashcan.addEventListener('click', (e) => {
      const endpoint = `/article/${trashcan.dataset.doc}`;

      fetch(endpoint, {
        method: 'DELETE',
      })
      .then(response => response.json())
      .then(data => window.location.href = data.redirect)
      .catch(err => console.log(err));
    });
    
  </script>
</body>
</html>